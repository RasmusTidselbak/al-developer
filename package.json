{
    "name": "al-dev",
    "displayName": "AL Developer",
    "description": "AL Developer Helper",
    "version": "1.2.0",
    "publisher": "rasmus",
    "engines": {
        "vscode": "^1.28.0"
    },
    "repository": {
        "type": "git",
        "url": "localhost"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:aldev.newInstance",
        "onCommand:aldev.removeInstance",
        "onCommand:aldev.updateAppManifest",
        "onCommand:aldev.copyPassword"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "aldev.newInstance",
                "title": "AL Dev: New Instance"
            },
            {
                "command": "aldev.removeInstance",
                "title": "AL Dev: Remove Instance"
            },
            {
                "command": "aldev.updateAppManifest",
                "title": "AL Dev: Update App.json Manifest"
            },
            {
                "command": "aldev.copyPassword",
                "title": "AL Dev: Copy Password"
            }
        ],
        "configuration": [
            {
                "title": "AL Developer Options",
                "properties": {
                    "aldev.dockerAgentType": {
                        "type": "string",
                        "enum": [
                            "localhost",
                            "Cloud"
                        ],
                        "default": "localhost",
                        "description": "Defines which type of Docker installation is used."
                    },
                    "aldev.dockerAgentURL": {
                        "type": "string",
                        "default": "http://localhost",
                        "description": "Assign the URL of the Docker agent."
                    },
                    "aldev.licenseFilePath": {
                        "type": "string",
                        "default": "",
                        "description": "Path to the default license file (.flf)"
                    },
                    "aldev.NAV": {
                        "type": "object",
                        "description": "Defines the targed version of NAV connected to the solution",
                        "properties": {
                            "version": {
                                "title": "NAV Version",
                                "type": "string",
                                "default": "BC",
                                "enum": [
                                    "BC",
                                    "2018",
                                    "2017",
                                    "2016",
                                    "2015"
                                ],
                                "description": "Targeted version of the solution."
                            },
                            "cu": {
                                "title": "Cumulative Update",
                                "type": "number",
                                "maximum": 99,
                                "description": "Targeted cumulative update of the solution."
                            },
                            "local": {
                                "title": "Localization",
                                "type": "string",
                                "default": "",
                                "maxLength": 2,
                                "description": "Targeted localization of the solution."
                            }
                        }
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "mocha": "^5.2.0",
        "tslint": "^5.8.0",
        "typescript": "^3.1.4",
        "vscode": "^1.1.25"
    },
    "dependencies": {
        "copy-paste": "^1.3.0",
        "mkdirp": "^0.5.1",
        "node-powershell": "^3.3.1",
        "opn": "^4.0.2",
        "phonetic": "^0.1.1",
        "random": "^2.0.13",
        "request": "^2.83.0",
        "uuid": "^3.3.2"
    }
}
